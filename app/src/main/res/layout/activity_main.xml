        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"/>

    <EditText
        android:id="@+id/editText_msg"
        android:layout_width="356dp"
        android:layout_height="240dp"
        android:ems="10"
